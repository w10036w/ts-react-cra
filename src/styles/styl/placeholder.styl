.loading
  width 100%
  height 100%
  .loading-spinner
    border 16px solid #f3f3f3 /* Light grey */
    border-top 16px solid cPrimary /* Blue */
    border-radius 50%
    animation spinner 2s linear infinite
    width 50px
    height @width
    &.spinner__small
      width sLodingSmall
    &.spinner__medium
      width sLoadingMedium
    &.spinner__large
      width sLoadingLarge
@keyframes spinner
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)